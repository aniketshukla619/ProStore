<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pay4free.in.prostore.Electronics"
    tools:showIn="@layout/app_bar_electronics">
<RelativeLayout
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:id="@+id/relative"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:id="@+id/cardview"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
    <HorizontalScrollView
        android:id="@+id/horizontal_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/mi"
                android:src="@drawable/mi"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/apple"
                android:src="@drawable/apple"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/samsung"
                android:src="@drawable/samung"
                />
            <ImageView
                android:layout_width="60dp"
                android:id="@+id/honor"
                android:layout_height="50dp"
                android:src="@drawable/honor"
                />
            <ImageView
                android:layout_width="60dp"
                android:id="@+id/oppo"
                android:layout_height="50dp"
                android:src="@drawable/oppo"
                />

        </LinearLayout>

    </HorizontalScrollView>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear1"
            android:orientation="horizontal">

        </LinearLayout>


</android.support.v7.widget.CardView>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/relative"
        android:background="@drawable/bg"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:id="@+id/text"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="TopPhones"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview1"
        android:layout_below="@+id/text"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</RelativeLayout>
